{
  "compilerOptions": {
    "target": "es2019",                                
    "module": "commonjs",                           
    "sourceMap": true,                           
    "outDir": "./src",
    "strict": true,                                 
    "esModuleInterop": true,                        
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,  
    "resolveJsonModule": true
  },
  "exclude": ["src/tests", "src/database"]
}