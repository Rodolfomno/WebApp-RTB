  "dependencies": {
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "joi": "^17.6.0",
    "mysql2": "^2.3.3",
    "sequelize": "6.9.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^18.19.47",
    "@types/sequelize": "4.28.10",
    "nyc": "^15.1.0",
    "sequelize-cli": "6.3.0",
    "ts-node": "^10.8.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  }
}
